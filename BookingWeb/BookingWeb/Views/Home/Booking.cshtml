@model BookingWeb.Models.Tour
<h2>Create</h2>

<form method="post" asp-controller="Booking" asp-action="Booking">
    <label for="Name">Name</label>
    <input type="text" name="Name" />

    <label for="Email">Email</label>
    <input type="text" name="Email" />

    <label for="BookCancel">Book</label>
    <input type="radio" name="BookCancel" value="Booking" />
    <label for="BookCancel">Cancel</label>
    <input type="radio" name="BookCancel" value="Cancel" />

    <input type="submit" placeholder="Send"/>
</form>